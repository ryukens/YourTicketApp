<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/textView_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textViewComida_text"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_imagen"
        android:layout_width="0dp"
        android:layout_height="228dp"
        android:contentDescription="@string/imageView_imagen_content_description"
        android:src="@drawable/img_comida"
        app:layout_constraintEnd_toEndOf="@+id/textView_titulo"
        app:layout_constraintStart_toStartOf="@+id/textView_titulo"
        app:layout_constraintTop_toBottomOf="@+id/textView_titulo" />


</androidx.constraintlayout.widget.ConstraintLayout>